generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Kennel {
  id        String  @id @default(uuid())
  name      String @unique
  location  String
  date      String
  cp        String
password  String
  // Relation
  users     Users[]   // One kennel has many users
}


model Users {
  id        String   @id @default(uuid())
  name      String @unique
  email     String? 
  address   String
  contact   String
status String?
  // Foreign key
  kennelId  String?
password String
  // Relation back to Kennel
  kennel    Kennel?  @relation(fields: [kennelId], references: [id], onDelete: Cascade)
}
